<h1>Book List</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>ISBN</th> <!-- New Column -->
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= book.isbn %></td> <!-- Display ISBN -->
        <td class="actions">
          <%= link_to 'Show', book_path(book), class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning' %>
          
          <!-- Force Delete Button -->
          <%= button_to 'Delete', book_path(book), method: :delete, 
               class: 'btn btn-danger force-delete', 
               data: { turbo_confirm: 'Are you sure you want to delete this book?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Book', new_book_path, class: 'btn btn-primary' %>
