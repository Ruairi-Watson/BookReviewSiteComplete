<h1>Books</h1>

<%= link_to 'Add New Book', new_book_path, class: 'btn btn-primary mb-3' %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td class="action-buttons">
          <%= link_to 'Show', book_path(book), class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning' %>
          <%= button_to 'Delete', book_path(book), method: :delete, class: 'btn btn-danger', data: { turbo_confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
